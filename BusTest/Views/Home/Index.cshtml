@model List<Url>

<div class="album py-5 bg-body-tertiary">
    <div class="container">
        <div class="col-sm-6 mt-2">
                        <div class="row">
                            <a asp-action="Create" class="btn btn-primary">
                                <span>Добавить</span>
                            </a>
                        </div>
                    </div>
        <table class="table table-striped table-hover table-bordered">
                    <thead class="thead">
                        <tr>
                            <th>
                                LongUrl
                            </th>
                            <th>
                                ShortUrl
                            </th>
                            <th>
                                CreatedAt
                            </th>
                            <th>
                                ActivationCount
                            </th>
                            <th>Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(model => item.LongUrl)
                            </td>
                            <td>
                                <a href="@item.ShortUrl">@item.ShortUrl</a>
                            </td>
                            <td>
                                @Html.DisplayFor(model => item.CreatedAt)
                            </td>
                            <td>
                                @Html.DisplayFor(model => item.ActivationCount)
                            </td>
                            <td>
                                <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-info">Редактирование</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Удаление</a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
    </div>
</div>